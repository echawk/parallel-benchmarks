#!/bin/sh

TIME=${TIME:-5}
HOSTS="${HOSTS:-localhost}"
NUM_PROCESSES=${NUM_PROCESSES:-1}

if [ -e ./primes-c/primes-mpi ]; then
    printf "%s," "$HOSTS"
    printf "%d," "$TIME"
    printf "%d," "$NUM_PROCESSES"
    timeout -s 2 5 mpiexec -N $NUM_PROCESSES -host $HOSTS ./primes-c/primes-mpi | wc -l
fi
